{
  "expo": {
    "name": "Langua",
    "slug": "languatalk-app",
    "version": "1.0.24",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "com.strukturedkaos.languatalkapp",
    "jsEngine": "hermes",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#FC5D5E"
    },
    "ios": {
      "buildNumber": "27",
      "supportsTablet": true,
      "bundleIdentifier": "com.strukturedkaos.languatalkapp",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app requires access to your microphone for audio recording.",
        "NSSpeechRecognitionUsageDescription": "This app requires speech recognition to transcribe audio.",
        "UIBackgroundModes": ["audio"],
        "CFBundleURLTypes": [
          {
            "CFBundleURLSchemes": [
              "com.googleusercontent.apps.1072787513609-a3l9d2jalsp5l9utemj6k6dgogc1f085"
            ]
          },
          {
            "CFBundleURLSchemes": [
              "com.googleusercontent.apps.1072787513609-a3l9d2jalsp5l9utemj6k6dgogc1f085"
            ]
          }
        ]
      },
      "usesAppleSignIn": true,
      "config": {
        "usesNonExemptEncryption": false
      },
      "bitcode": false
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.strukturedkaos.languatalkapp",
      "permissions": [
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.CAMERA",
        "android.permission.INTERNET",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.RECORD_AUDIO",
        "android.permission.SYSTEM_ALERT_WINDOW",
        "android.permission.WAKE_LOCK",
        "android.permission.BLUETOOTH",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.CAMERA",
        "android.permission.INTERNET",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.RECORD_AUDIO",
        "android.permission.SYSTEM_ALERT_WINDOW",
        "android.permission.WAKE_LOCK",
        "android.permission.BLUETOOTH",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.FOREGROUND_SERVICE_MICROPHONE",
        "android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK",
        "android.permission.USE_FULL_SCREEN_INTENT",
        "android.permission.POST_NOTIFICATIONS"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      "expo-apple-authentication",
      "@react-native-google-signin/google-signin",
      [
        "expo-notifications",
        {
          "icon": "./assets/images/notification-icon.png",
          "color": "#ffffff",
          "sounds": ["./assets/notification_sound.wav"]
        }
      ],
      [
        "@sentry/react-native/expo",
        {
          "organization": "languatalk-app",
          "project": "languatalk-app",
          "url": "https://sentry.io/"
        }
      ],
      "@livekit/react-native-expo-plugin",
      "@config-plugins/react-native-webrtc",
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/Lato-Regular.ttf",
            "./assets/fonts/Lato-Medium.ttf",
            "./assets/fonts/Lato-Bold.ttf"
          ]
        }
      ],
      "expo-asset"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "0e63b797-2f31-4ca1-be89-4cae65b653cd"
      }
    },
    "updates": {
      "enabled": true,
      "checkAutomatically": "ON_LOAD",
      "fallbackToCacheTimeout": 0,
      "url": "https://u.expo.dev/0e63b797-2f31-4ca1-be89-4cae65b653cd"
    },
    "assetBundlePatterns": ["assets/dict/**/*"]
  }
}
