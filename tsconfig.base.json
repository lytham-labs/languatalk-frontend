{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["development"],
    "paths": {
      "@languatalk-frontend/data-access-auth": [
        "libs/data-access/auth/src/index.ts"
      ],
      "@languatalk-frontend/data-access-user-settings": [
        "libs/data-access/user-settings/src/index.ts"
      ],
      "@languatalk-frontend/data-access-websocket": [
        "libs/data-access/websocket/src/index.ts"
      ],
      "@languatalk-frontend/ui-shared-layout": [
        "libs/ui/shared-layout/src/index.ts"
      ],
      "@languatalk-frontend/util-reading-aid": [
        "libs/util/reading-aid/src/index.ts"
      ]
    }
  }
}
